<%= form_for @resume do |f| %>
  <% if @resume.errors.any? %>
	<div id="error_explanation">
    <h4><%=raw t('errors.template.header', count: @resume.errors.count,
	model: t('activerecord.models.resume')) %>:</h4>

    <ul>
    <% @resume.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
	<div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, size: 60, class: "text medium" %>
</div>
		<div class="field">
		<%= f.label :type_of_job %>
		<%= f.select :type_of_job, types_of_job, { prompt: true }, { id: "cbo", class: "select" } %>
		</div>
		<div class="field">
		<%= f.label :education %>
		<%= f.select :education, educations, { prompt: true }, { id: "cbo", class: "select" } %> 
		</div>
		<div class="field">
		<%= f.label :sex %>
		<%= f.select :sex, resume_sexes, { prompt: true }, { id: "cbo", class: "select" } %> 
		</div>
		<div class="field">
		<%= f.label :birthdate, "Дата рождения" %>
		<%= f.text_field :birthdate, class: "text low", style: "width:130px;" %>
		</div>
		<div class="field">
		    <%= f.label :experience_period %>
		    <%= f.select :experience_period, experience_periods, { prompt: true, default: 3 }, { id: "cbo", class: "select" } %>
		<div class="field">
		<div class="field">
		    <%= f.label :career, "Карьера" %>
		    <%= f.text_area :career, rows: 10, cols: 60, class: "text" %>
		</div>
<div class="field">
    <%= f.label :description, "Навыки и знания" %>
    <%= f.text_area :description, rows: 6, cols: 40, class: "text" %>
</div>

<div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: "text medium" %>
</div>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "text medium" %>
</div>
<div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "text medium" %>
</div>
<div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: "text medium" %>
</div>
<div id="salary" class="field">
    <%= f.label :salary %>
    <%= f.number_field :salary, step: 1000, min: 3000, class: "text medium", style: "width:120px;" %> рублей.
</div>
<div id="inline_display" class="actions">
    <%= f.submit %><%= link_to "<< В мои резюме", resumes_path, style: "left:5px;padding:7px;", class: "backlink" %>
</div>
<% end %>

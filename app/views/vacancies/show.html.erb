<style type="text/css" media="screen">

.main_container_div p, .main_container_div p span {
	font-size:14px;
}
p.career {
}
h1 {
	font-size:300%;
	margin-bottom:30px;
}
span.header {
	font-family: Tahoma, Geneva, sans-serif; margin-top: 10px; margin-bottom: 20px; color: #666;
	font-weight:bold;
	margin-bottom:20px;
	margin-top:25px;
	font-size: 17px; color: #666; text-transform: uppercase;
	display:block;
}
span {
	display:block;
	margin-top:7px;
	margin-bottom:7px;
}
p.actions {
	margin-top:30px;
}
.dates {
	font-style:italic;
	color:#bfbfbf;
}
</style>
<h1><%= @vacancy.title %><!-- Place this tag where you want the +1 button to render -->
<g:plusone></g:plusone>

<!-- Place this render call where appropriate -->
<script type="text/javascript">
  window.___gcfg = {lang: 'ru'};

  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script></h1>

<p>
  <span class="header">Требования:</span>
  <%= simple_format(@vacancy.career, :class => 'career') %>
</p>

<p>
	<span class="header">Условия работы:</span>
	<%= simple_format(@vacancy.description) %>
</p>

<p>
  <span class="header">Требуемый опыт:</span>
  <%= @vacancy.translated_experience_of_work %>
</p>

<p>
  <span class="header">Зарплата:</span>
  <%= number_to_currency(@vacancy.salary) %>
</p>

<p>
  <span class="header">Город:</span>
  <span class="like_input"><%= @vacancy.city %></span>
</p>



<p class="contacts">
  <span class="header">Контакты</span>
	<span>Email: <%= @vacancy.email %><%= image_tag "email.png", :title => "Email", :class => "email", style: "width:21px; height:22px;position:absolute;margin-left:5px;margin-top:-1px;" %></span>
  <span>Телефон: <%= @vacancy.phone %><%= image_tag "phone_number.png", :title => "Телефон", :class => "phone_number", style: "width:16px; height:16px;position:absolute;margin-left:5px" %></span>
	<span>Имя: <%= @vacancy.name %></span>
</p>

<p class="dates">
	<span class="header"></span>
	<span>Опубликовано <%= l @vacancy.created_at, format: :long %></span>
</p>
<p>
<span>
<!-- Place this tag where you want the +1 button to render -->
<g:plusone></g:plusone>
<script type="text/javascript">
  window.___gcfg = {lang: 'ru'};

  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>
</span>
</p>
<p class="actions">
<% if @vacancy.user != @current_user or !@current_user %>
<%= link_to "Откликнуться", vacancy_response_path, class: "submit" %>
<% end %>

<% if @current_user %>
<% if @current_user.can_edit?(@vacancy) %>
<%= link_to "Редактировать", edit_vacancy_path(@vacancy), class: "submit" %>
<% end %>
<% end %>
</p>
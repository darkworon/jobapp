<div class="depot_form">
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend><%= t('.log_in_legend') %></legend>

      <div>
        <%= label_tag :email, t('.email') %>:
        <%= text_field_tag :email, params[:email] %>
      </div>

      <div>
        <%= label_tag :password, t('.password') %>:
        <%= password_field_tag :password, params[:password] %>
      </div>
  
      <div>
        <%= submit_tag t('.submit') %>
      </div>
    </fieldset>
  <% end %>
</div>
<%= t('.dont_have_acc_yet')%> <%= link_to t('.register'), register_path %> <%= t(".now") %>
